<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="DoExtBuild">
	<property name="projectName" value="doExt_do_TextField"/>
	<property name="buildDir" value="build"/>
	<property name="baseDir" value="${buildDir}/${projectName}"/>
	<property name="src" value="src/doext" />
	<property name="zip" value="package.zip"/>
	<property name="classes" value="${buildDir}/classes" />
	<!-- 替换为您本地Android路径JAR-->
	<property name="androidJAR>" value="E:/sdk/platforms/android-16/android.jar"/>

	<target name="init">
		<delete dir="${zip}"/>
		<echo>mkdir dir</echo>
		<mkdir dir="${baseDir}"/>
		<mkdir dir="${classes}"/>
		<mkdir dir="${baseDir}/libs" />
		<mkdir dir="${baseDir}/res"/>
	</target>
	
	<path id="android.classpath">
        <pathelement location="${androidJAR}"/>
    </path>

	<target name="compile" depends="init" description="comile target">
		<javac deprecation="on" debug="on" srcdir="${src}" destdir="${classes}" includeantruntime="true" encoding="UTF-8">
			<classpath>
				<fileset dir="libs">
					<include name="*.jar" />
				</fileset>
				<path refid="android.classpath"></path>
			</classpath>
		</javac>
	</target>

	<target name="doExt" depends="compile">
		<echo>compile jar</echo>
		<jar destfile="${baseDir}/${projectName}.jar" basedir="${classes}"/>
		<delete dir="${classes}"/>
	</target>

	<target name="cLibs">
		<echo>copying libs...</echo>
		<copydir dest="${baseDir}/libs" src="libs">
			<exclude name="**/android*"/>
			<exclude name="**/android-support-v4*"/>
			<exclude name="**/doExt_Do_WebView*"/>
			<exclude name="**/docore*"/>
		</copydir>
	</target>
	
	<target name="cRes">
		<echo>copying res...</echo>
		<copydir dest="${baseDir}/res" src="res">
			<exclude name="**/*deviceone*"/>
		</copydir>
	</target>
	
	<target name="cManifest">
		<echo>copying manifest.xml</echo>
		<copy tofile="${baseDir}/AndroidManifest.xml">
		     <fileset dir="./" includes="AndroidManifest.xml" />
		</copy>
	</target>
	
    <target name="package">
        <zip destfile="${zip}" duplicate="preserve">  
            <zipfileset dir="${buildDir}" includes="**/*.*" />  
        </zip> 
    	<delete dir="${buildDir}"/>
    </target> 
	
	<target name="build" depends="doExt" >
		<antcall target="cRes"/>
		<antcall target="cLibs"/>
		<antcall target="cManifest"/>
		<antcall target="package"/>
	</target>
</project>
